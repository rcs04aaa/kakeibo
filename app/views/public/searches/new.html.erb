<!--検索内容入力画面-->
<div class="container">
  <div class="row">
    <div class="col-10">
      <h5>支出検索</h5>
      <div class="search_form">
        <%= form_with url: search_result_path, local: true, method: :get do |f| %>
          <%= f.text_field :word , placeholder: "キーワード" %>※カテゴリー検索時は空欄にしてください<br>
          <%= f.collection_select :category_id, Category.all, :id, :category_name, { include_blank: "選択してください" } %><br>
          <%= f.submit "検索", class: "btn btn-outline-secondary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>