<!--検索内容入力画面-->
<div class="container">
  <div class="row">
    <div class="col-10">
      <div class="search_form">
        <%= form_with url: search_result_path, local: true, method: :get do |f| %>
          <%= f.text_field :word %>
          <%= f.select :search, options_for_select([["完全一致", "perfect_match"], ["部分一致", "partial_match"]]) %>
          <%= f.submit "検索", class: "btn btn-outline-secondary" %>
        <% end %>
      </div>
      <div class="search_form">
        <%= form_with url: search_result_path, local: true, method: :get do |f| %>
          <%= f.select :category_id, [["食費", "0"], ["日用品", "1"], ["光熱費", "2"], ["衣服", "3"], ["美容費", "4"], ["通信費", "5"], ["交通費", "6"], ["医療費", "7"], ["交際費", "8"], ["娯楽費", "9"], ["教育費", "10"], ["その他", "11"]], include_blank: "選択してください" %>
          <%= f.submit "検索", class: "btn btn-outline-secondary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>