<!--検索結果一覧画面-->
<div class="container">
  <div class="row">
    <div class="col-10">
      <!--購入品検索-->
      <table class="table table-hover table-inverse">
        <% if @word.present? %>
        <h4>検索ワード：<%= @word %></h4>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.payment_at %></td>
              <td><%= post.content %></td>
              <td><%= post.price %></td>
              <td><%= post.quantity %></td>
            </tr>
          <% end %>
        </tbody>
        <% else %>
        <!--カテゴリー検索-->
          <h4>カテゴリー：<%= @category.category_name %></h4>
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td><%= post.payment_at %></td>
                <td><%= post.content %></td>
                <td><%= post.price %></td>
                <td><%= post.quantity %></td>
              </tr>
            <% end %>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>