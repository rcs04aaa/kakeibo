<!--収支登録画面-->
<div class="container">
  <div class="row">
    <div class="col-10">
      <%= form_with model:post, local:true do |f| %>
      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_field :content, class: "form-control post_content" %>
      </div>
      <div class="form-group">
        <%= f.label :price %>
        <%= f.text_field :price, class: "form-control post_price" %>
      </div>
      <div class="form-group">
        <%= f.submit "登録", class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>